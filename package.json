{
  "name": "minimal-react-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A minimal React 18 boilerplate using typeScript and webpack 5.",
  "main": "./src/index.tsx",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "start": "webpack serve --config webpack.dev.js",
    "lint": "eslint ./src/**/* --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint --fix ./src/**/* --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "css-loader": "^6.7.0",
    "eslint": "^8.14.0",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "author": "Anuj Sharma (anujsharma.engg@gmail.com)",
  "keywords": [
    "react 18",
    "webpack",
    "webpack 5",
    "typeScript",
    "eslint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anuj-webdev/minimal-react-boilerplate" 
  }
}
